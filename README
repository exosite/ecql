timer:tc(fun() ->
    lists:foreach(
      fun(Each) ->
          cassandra:execute_async("INSERT INTO record_name (a, b) VALUES(?, ?)", [Each, Each])
         ,Each = cassandra:select_value("SELECT b FROM record_name WHERE a = ?", [Each])
      end
     ,lists:seq(1, 50000)
    )
  end).

